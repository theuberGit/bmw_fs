@{
    ViewBag.Title = "상품약관 등록";
}
<div id="content" class="reg">
    <div class="cont_top">
        <h3>상품약관 등록</h3>
    </div>
    <div class="cont_bottom">
        <form method="post" enctype="multipart/form-data">
            <table class="reg_table">
                <caption>상품약관 입력 테이블</caption>
                <colgroup>
                    <col width="130px">
                    <col width="870px">
                </colgroup>
                <tr>
                    <th scope="row">작성자</th>
                    <td>@HttpContext.Current.User.Identity.Name</td>
                </tr>
                <tr>
                    <th scope="row"><label for="category">구분</label></th>
                    <td>
                        <select name="category" id="category">
                            <option value="yeosin">여신거래</option>
                            <option value="halbu">할부거래</option>
                            <option value="lease">리스</option>
                            <option value="auto">오토론</option>
                            <option value="usedcar">중고차대출</option>
                            <option value="longrent">장기렌터카</option>
                            <option value="residualGuaranteeOperation">1+1 잔가보장형 운용리스</option>
                            <option value="residualGuaranteeInstallment">잔가보장형 할부금융</option>
                            <option value="stockFinance">딜러 재고금융 약정서</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th scope="row"><label for="title">* 제목</label></th>
                    <td><input type="text" name="title" id="title" class="input_long_type" maxlength="50" value="" /></td>
                </tr>
                <tr>
                    <th scope="row"><label for="contents">* 내용</label></th>
                    <td><textarea rows="20" cols="30" id="contents" name="contents"></textarea> </td>
                </tr>
            </table>
        </form>
        <div class="btn_area">
            <a href="list?@Session["searchString"]" class="btn_defualt btn_list">목록</a>
            <a href="javascript:void(0);" class="btn_defualt btn_reg" onclick="regForm();">등록</a>
        </div>
    </div>
</div>
<script type="text/javascript" src="/resources/se/js/HuskyEZCreator.js"></script>
<script type="text/javascript" src="/resources/js/smarteditor.js"></script>
<script>
    lnbSet(".product_mgmt");
    function regForm() {

        if (!confirm('등록하시겠습니까?')) return;
        if (!$('#title').required()) return;
        editor_object.getById["contents"].exec("UPDATE_CONTENTS_FIELD", []);
        if (!$('#contents').required()) return;
        $('#content form').attr('action', 'registerProc').submit();
    };

</script>