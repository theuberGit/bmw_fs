    <insert id="insertPayment">
      INSERT INTO BMW_FS_PAYMENT
      (
      IDX
      , BRAND
      , SERIES
      , MODEL
      , MODELNAME
      , PRICE
      , PROGRAM
      , ZL_ZANGA
