      , PP_PAY2
      , PP_PAY3
      , DEPLOY_YN
      , REG_ID
      , ORDER_NUM
      )
      VALUES (
      #idx#
      ,#brand#
      ,#series#
      ,#model#
      ,#modelName#
      ,#price#
      ,#program#
      ,#zlZanga#
      ,#zlPay1#
      ,#zlPay2#
